<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading"><%= pluralize(@user.errors.count, "error") %> prohibited this profile from being saved:</h4>

      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :fullname %>
    <%= f.text_field :fullname, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :avatar %>
    <label class="custom-file d-block">
      <%= f.file_field :avatar, class: 'custom-file-input', accept: 'image/jpeg' %>
      <span class="custom-file-control" data-content="Choose file..."></span>
    </label>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
