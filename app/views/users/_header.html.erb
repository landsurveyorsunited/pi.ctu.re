<% if user_signed_in? && @user == current_user %>
  <div class="btn-group float-right" role="group" style="position:absolute;right:15px;z-index:1">
    <%= link_to edit_user_path(@user), class: 'btn btn-secondary', role: 'button' do %>
      <%= fa_icon("pencil") %> Edit
    <% end %>
  </div>
<% end %>

<div class="row align-items-center">
  <div class="col col-sm-auto text-sm-left text-center mb-3 mb-sm-0">
    <% if @user.avatar? %>
      <%= image_tag(@user.avatar_url.to_s, alt: 'avatar', class: 'rounded-circle', width: 100, height: 100) %>
    <% else %>
      <span class="rounded-circle align-bottom d-inline-block text-white" style="background:#ccc;width:100px;height:100px">
        <i class="fa fa-user-o align-top text-center" style="width:100px;line-height:95px;font-size:70px" aria-hidden="true"></i>
      </span>
    <% end %>
  </div>
  <div class="col-sm text-sm-left text-center">
    <h1 class="mb-0">
      <%= @user.name %>
    </h1>
  </div>
</div>

<hr class="mt-4 mb-4">

<ul class="nav nav-pills">
  <li class="nav-item">
    <%= link_to 'Pictures', @user, class: "nav-link #{content_for(:page) == 'user_pictures' ? 'active' : ''}" %>
  </li>
  <li class="nav-item">
    <%= link_to 'Albums', user_albums_path(@user), class: "nav-link #{content_for(:page) == 'user_albums' ? 'active' : ''}" %>
  </li>
</ul>
