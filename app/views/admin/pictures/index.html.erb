<div class="row">
  <div class="col-lg-2">
    <%= render 'admin/nav' %>
  </div>
  <div class="col-lg-10">
    <div class="card">
      <div class="card-header text-muted"><%= title %w[Pictures Admin], 'Pictures' %></div>
      <div class="card-body">
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">Picture</th>
              <th scope="col">User</th>
              <th scope="col">Created</th>
              <th scope="col">Status</th>
            </tr>
          </thead>
          <tbody>
            <% @pictures.each do |picture| %>
              <tr>
                <th scope="row">
                  <%= link_to picture do %>
                    <%= image_tag(picture.image.thumb_url('64x64!')) %>
                  <% end %>
                </th>
                <td class="align-middle"><%= link_to picture.user.username, picture.user %></td>
                <td class="align-middle"><%= timeago_tag picture.created_at %></td>
                <td class="align-middle"><%= picture.status %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
