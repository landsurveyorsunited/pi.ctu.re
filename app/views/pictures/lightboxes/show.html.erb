<% title ["#{truncate((@picture.caption.presence || 'Picture').lines.first.chomp, length: 60, separator: '.')} by #{@picture.user.name} (#{@picture.token})", "Lightbox"] %>
<% set_meta_tags og: { image: @picture.image.thumb_url('800x800') } %>
<% set_meta_tags twitter: { card: 'photo', image: @picture.image.thumb_url('800x800') } %>

<div class="row align-items-center" style="height:100vh">
  <div class="col-1 p-0 text-center">
    <% if @previous_picture %>
      <% set_meta_tags prev: picture_lightbox_url(@previous_picture) %>
      <%= link_to picture_lightbox_path(@previous_picture, from: @from, order: @order), class: '', aria_label: 'previous' do %>
        <%= fa_icon("chevron-left") %>
        <span class="sr-only">Previous</span>
      <% end %>
    <% end %>
  </div>

  <div class="col-10 p-0 text-center">
    <%= link_to(picture_path(@picture, secret: @picture.protected_secret, from: @from, order: @order), style: 'cursor:zoom-out') do %>
      <%= image_tag(@picture.image_url, alt: @picture.alt, class: 'img-fluid mx-auto d-block', style: 'max-height:90vh') %>
    <% end %>
  </div>

  <div class="col-1 p-0 text-center">
    <% if @next_picture %>
      <% set_meta_tags next: picture_lightbox_url(@next_picture) %>
      <%= link_to picture_lightbox_path(@next_picture, from: @from, order: @order), class: '', aria_label: 'next' do %>
        <%= fa_icon("chevron-right") %>
        <span class="sr-only">Next</span>
      <% end %>
    <% end %>
  </div>
</div>
