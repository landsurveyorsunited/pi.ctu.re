<% content_for(:title, "Edit Picture (#{@picture.token})") %>

<div class="row justify-content-center">
  <div class="col-lg-6">
    <div class="card">
      <div class="card-header text-muted">Edit picture</div>
      <div class="card-body">
        <%= image_tag(@picture.image.thumb_url('500x500'), class: 'img-fluid mb-3') %>

        <%= render 'form', picture: @picture %>
      </div>
    </div>
  </div>
</div>
