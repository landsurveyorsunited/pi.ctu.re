<% content_for(:title, "Edit Picture (#{@picture.token})") %>

<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card">
      <h4 class="card-header">Edit picture</h4>
      <div class="card-block">
        <%= image_tag(@picture.image_url(:thumb).to_s, class: 'img-fluid mb-3') %>

        <%= render 'form', picture: @picture %>
      </div>
    </div>
  </div>
</div>
